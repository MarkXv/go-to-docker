<ehcache>

    <diskStore path="java.io.tmpdir/shiro-sprhib-ehcache"/>


    <defaultCache
        maxElementsInMemory="1000"
        eternal="false"
        timeToLiveSeconds="600"
        overflowToDisk="true"
        diskPersistent="false"
        />

    <!--=================================================================
        Hibernate Object Caches
        =================================================================-->

    <cache name="Role"
        maxElementsInMemory="100"
        timeToLiveSeconds="0"
        overflowToDisk="true"/>

    <cache name="Role.permissions"
        maxElementsInMemory="100"
        timeToLiveSeconds="0"
        overflowToDisk="true"/>

    <cache name="io.fairymagic.exam.api.dao.User"
        maxElementsInMemory="1000"
        timeToLiveSeconds="3600"
        overflowToDisk="true"/>

    <cache name="io.fairymagic.exam.api.dao.User.roles"
        maxElementsInMemory="1000"
        timeToLiveSeconds="3600"
        overflowToDisk="true"/>

</ehcache>